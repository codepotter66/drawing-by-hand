{
  "name": "drawing-by-hand",
  "version": "1.0.0",
  "description": "基于MediaPipe的手部追踪画图应用",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build-exe": "pkg . --targets node16-win-x64,node16-macos-x64,node16-linux-x64 --output drawing-app",
    "build-win": "pkg . --targets node16-win-x64 --output drawing-app.exe",
    "build-mac": "pkg . --targets node16-macos-x64 --output drawing-app",
    "build-linux": "pkg . --targets node16-linux-x64 --output drawing-app",
    "build-nexe": "nexe server.js --target macos-x64-16.20.0 --output drawing-app",
    "build-nexe-win": "nexe server.js --target windows-x64-16.20.0 --output drawing-app.exe",
    "build-nexe-linux": "nexe server.js --target linux-x64-16.20.0 --output drawing-app",
    "build-zip": "./build.sh"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.7.0",
    "nexe": "^4.0.0-rc.2"
  },
  "keywords": ["mediapipe", "hand-tracking", "drawing", "webcam"],
  "author": "",
  "license": "MIT"
}
